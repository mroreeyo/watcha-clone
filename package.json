{
  "name": "watcha-clone",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "dev": "pnpm --filter @watcha-clone/web dev",
    "start": "pnpm --filter @watcha-clone/web start",
    "build": "pnpm -r build",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write packages/*",
    "test": "jest packages/*",
    "test:watch": "jest --watch packages/*",
    "test:coverage": "jest --coverage packages/*",
    "clean": "pnpm -r clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "path-browserify": "^1.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
